# Docker Environment Variables Example
# Copy this file to .env.docker and customize as needed

# Service Ports (from original .env)
API_GATEWAY_PORT=3000
SPOTIFY_SERVICE_PORT=3001
DOWNLOAD_SERVICE_PORT=3002
PROCESSING_SERVICE_PORT=3003
ANALYSIS_SERVICE_PORT=3004
WEBSOCKET_SERVICE_PORT=3006

# GPU Settings 
# (replaces CUDA_VISIBLE_DEVICES - use the following instead)
USE_GPU=false
GPU_DRIVER=none  # Set to 'nvidia' when using GPUs
GPU_COUNT=0      # Set to number of GPUs (1, 2, etc.)
GPU_CAPABILITIES=gpu

# Dependencies Directories
DEPS_DIR=./deps
PYTORCH_MODELS_DIR=${DEPS_DIR}/pytorch  # Replaces MODELS_DIR
SPOTDL_CACHE_DIR=${DEPS_DIR}/spotdl-cache
MODELS_DIR=/app/models  # Keep for backward compatibility

# Redis Configuration
REDIS_URL=redis://redis:6379  # Keep for backward compatibility
REDIS_PASSWORD=redispassword

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=soundforge

# Supabase Configuration
SUPABASE_URL=http://localhost:8000
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9
SUPABASE_DB_PASSWORD=postgres

# Spotify API Configuration
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Download Configuration
SPOTIFY_DOWNLOADER=spotdl  # Set to 'spotifyapi', 'default', or 'spotdl'

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin